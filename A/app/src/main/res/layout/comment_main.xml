<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:padding="12dp"
    android:layout_width="match_parent" android:background="#ffffff" android:layout_height="wrap_content">

    <com.scb.administrator.a.CircleImageView
        android:id="@+id/m_logo"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:scaleType="centerInside"
        android:layout_margin="2dp"
        android:src="@drawable/ic_default_avatar_lite"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/m_title"
        android:textSize="15sp"
        android:scaleX="1.0"
        android:text="123"
        android:textColor="#000000"
        android:layout_below="@id/m_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/m_time"
        android:text="岁月抚伤"
        android:textSize="12sp"
        android:scaleX="1.0"


        android:layout_marginTop="10dp"
        android:layout_below="@id/m_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="#20000000"
        android:layout_marginTop="10dp"
        android:layout_below="@id/m_time"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:scaleX="1.0"
        android:text="123"
        android:id="@+id/m_content"
        android:textSize="17sp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_time"
        />
</RelativeLayout>
