<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:padding="8dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <com.scb.administrator.a.CircleImageView
            android:id="@+id/i_logo"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="centerInside"
            android:layout_margin="2dp"

            android:src="@drawable/ic_default_avatar_lite"
            />

        <TextView
            android:layout_toRightOf="@id/i_logo"
            android:id="@+id/userName_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:scaleX="1.0"
            android:layout_margin="15dp"
            android:textColor="#11800A"
            android:text = "userName"
            />
        <TextView
            android:id="@+id/index_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "1 F"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="11sp"
android:layout_marginTop="16dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/textview_style2"
            />
        <TextView
            android:layout_below="@id/userName_comment"
            android:id="@+id/content_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:paddingRight="6dp"

            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:text = "评论"
            android:textSize="14sp"
            android:scaleX="1.0"
            android:textColor="#8E8E8E"

            />
    </RelativeLayout>

